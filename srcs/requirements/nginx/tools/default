       server {
    listen 443 ssl;
    server_name jperpect.42.fr;

    ssl_certificate /etc/ssl/certs/jperpect.crt; 
    ssl_certificate_key  /etc/ssl/private/jperpect.key;
    ssl_protocols TLSv1.2;
    ssl_prefer_server_ciphers on;

    root /var/www/html/; 
    index index.php index.html index.htm;
        location / {
            proxy_pass http://wordpress:9000;
	    proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;  # Passa o IP real do cliente
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;  # Para logs de IP
            proxy_set_header X-Forwarded-Proto $scheme;  # Informa se a requisição é HTTP/HTTPSkk
        }

}

